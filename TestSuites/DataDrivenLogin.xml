<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="TestSuite">
    <groups>
        <run>
            <include name="smoketest"></include>
        </run>
    </groups>
    <listeners>
        <listener class-name="com.test.components.Listeners"></listener>
    </listeners>
    <test thread-count="5" name="errorvalidationsTest">
        <classes>
            <class name="com.remedi.test.ErrorValidationsTest" />
        </classes>
    </test>
    <test thread-count="5" name="StandaloneTest">
        <classes>
            <class name="com.remedi.test.StandAloneTest" />
        </classes>
    </test>
</suite>
